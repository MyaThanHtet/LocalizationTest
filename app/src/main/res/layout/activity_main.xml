<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:id="@+id/result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="104dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/mm_btn"
            android:src="@drawable/mm_flag" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/eng_btn"
            android:src="@drawable/eng_flag" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/chinese_btn"
            android:src="@drawable/china_flag" />

        <Button
            android:id="@+id/mm_btn"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:text="Myanmar"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="541dp" />

        <Button
            android:id="@+id/eng_btn"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_marginTop="50dp"
            android:text="English"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="457dp" />
        <Button
            android:id="@+id/chinese_btn"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_marginTop="100dp"
            android:text="Chinese"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="457dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>